//----------------------------------------------------------------------------
// File: Scan_line.fx 
// 
// The effect file for the Mosaic HLSL sample. 
//----------------------------------------------------------------------------
//----------------------------------------------------------------------------
// Global variables 
//----------------------------------------------------------------------------
sampler tex0 : register(s0);

float Time = 1.0;
float scan_parameter = 1;
 

//----------------------------------------------------------------------------
// pass0 PixelShader Main Function 
//----------------------------------------------------------------------------
float4 PS_P0_Main(float2 UV : TEXCOORD0) : COLOR0
{

	float3 color = tex2D(tex0, UV);

	color += abs(sin(UV.y * 100.0 + Time * 5.0)) * 0.08;
	color += abs(sin(UV.y * 300.0 - Time * 10.0)) * 0.05;

	color.r *= 1.0f;

	return float4(color, 1.0);

}
//----------------------------------------------------------------------------
// Techniques 
//----------------------------------------------------------------------------
technique Scanline {
	pass P0
	{
		VertexShader = NULL;
		PixelShader = compile ps_3_0 PS_P0_Main();
	}
}